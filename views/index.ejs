<%- include('layout', { title: title }) %>

<!-- Child template-specific content goes here -->
<section>
  <form class="mx-5" method="post" action="/add_note">
    <input type="hidden" name="id" id="id" aria-describedby="userID" value="<%= id %>">
    <div class="mb-3">
      <label for="title" class="form-label">Title</label>
      <input type="text" class="form-control" id="title" aria-describedby="titleHelp" name="title">
      <div id="titleHelp" class="form-text">Choose a title to help organise your notes</div>
    </div>
    <div class="mb-3">
      <label for="description" class="form-label">Description</label>
      <textarea type="text" class="form-control" id="description" aria-describedby="descriptionHelp" name="description"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Add a Note</button>
  </form>
  <h1 class="text-center my-2">Your Notes:</h1>
  <div class="mynotes row "></div>
  
 <!-- ... previous HTML code ... -->

<div class="container row mx-auto">
  <% if (notes && notes.length > 0) { %>
    <% for (const note of notes) { %>
      <div class="card mx-4 my-2 " style="width: 20rem;">
        <div class="card-body">
          <h5 class="card-title"><%= note.title %></h5>
          <h6 class="card-subtitle mb-2 text-body-secondary">---------------</h6>
          <p class="card-text max-height-card"><%= note.description %></p>
          <a href="/show_note/<%= note.id %>" class="card-link">show</a>
          <a href="/delete_note/<%= note.id %>/<%= note.user_id %>" class="card-link" onclick="return confirm('Are you sure you want to delete this note?')">Delete</a>
        </div>
      </div>
    <% } %>
  <% } else { %>
    <p>No notes yet</p>
  <% } %>
</div>

  </div>
</section>